= render 'productions/header'

.user
  .user__card
    .user__card__content
      .user__card__contentk
        Your Credit Card Infomation
    .customer__card__content
      %figure.form__space
        .customer__card__content__title
          Your Credit Card
        .customer-card__content--number.form_space
          %h3
            = "**** **** **** " + @card[:last4]
        .customer-card__content--expired.form_space
          - exp_month = @card.exp_month.to_s
          - exp_year = @card.exp_year.to_s.slice(2,3)
          %h3
            = exp_month + " / " + exp_year
        .customer-card__content--expired.form_btn
          = link_to card_path ,method: :delete,class:"customer-card__content--btn" do
            %button{type: "submit",class: "btn-red"}
              削除する
            
= render 'productions/footer'